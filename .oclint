disable-rules:
  - LongLine
  - EmptyIfStatement
  - TooFewBranchesInSwitchStatement
  - AvoidPrivateStaticMembers
# rule-paths:
#   - /etc/rules
rule-configurations:
  - key: CYCLOMATIC_COMPLEXITY
    value: 15
  - key: NPATH_COMPLEXITY
    value: 300
  - key: LONG_VARIABLE_NAME
    value: 32
  - key: NCSS_METHOD
    value: 50
# TODO: try removing these checks for tests directory.
# output: oclint.xml
# report-type: xml
max-priority-1: 20
max-priority-2: 40
max-priority-3: 60
enable-clang-static-analyzer: true
